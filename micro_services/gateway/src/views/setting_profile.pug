extends layout.pug

block content
    .form
        h5 Setting profile
        .row
            form#form_setting_profile.col.s10
                .row
                    .input-field.col.s10
                        input#name_user.validate(type='text' name='name_user')
                        label(for='name_user') Name
                .row
                    .input-field.file-field.col.s10
                        .btn-small
                            span.textOfBtn Add avatar
                            input(type='file' name='avatar')
                        .file-path-wrapper
                            input#avatarImage.file-path.validate(type='text' placeholder='Choose your photo')
                .row
                    .input-field.col.s10
                        input#password.validate(type='password')
                        label(for='password') Enter password to save
                input#submit_signup.btn(type='submit' value='Save changes')
    script(src='/scripts/setting_profile.js')
